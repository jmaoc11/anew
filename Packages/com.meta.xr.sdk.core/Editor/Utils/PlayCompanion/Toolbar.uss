/* Meta XR Toolbar Styles for Unity 6.3+ */
/* Matches Unity's #PlayMode .unity-editor-toolbar__button-strip > .unity-toolbar-button styles */

/* Container styling */
#MetaXRPlayCompanion {
    flex-direction: row;
    margin-left: 4px;
    margin-right: 4px;
}

/* Button base styling - matches Unity's PlayMode buttons */
#MetaXRPlayCompanion .unity-editor-toolbar-element {
    background-color: var(--unity-theme-background-color-1);
    border-width: 0;
    margin: 0;
    margin-right: 2px;
    padding: 0;
}

#MetaXRPlayCompanion .unity-toolbar-toggle {
    background-color: var(--unity-theme-background-color-1);
    border-width: 0;
    margin: 0;
    margin-right: 2px;
    padding: 0;
}

/* Hover state */
#MetaXRPlayCompanion .unity-editor-toolbar-element:hover {
    background-color: var(--unity-theme-background-color-2);
}

#MetaXRPlayCompanion .unity-toolbar-toggle:hover {
    background-color: var(--unity-theme-background-color-2);
}

/* Active/pressed state */
#MetaXRPlayCompanion .unity-editor-toolbar-element:active {
    background-color: var(--unity-theme-background-color-3);
}

#MetaXRPlayCompanion .unity-toolbar-toggle:active {
    background-color: var(--unity-theme-background-color-3);
}

/* Checked/selected state for toggles */
#MetaXRPlayCompanion .unity-toolbar-toggle:checked {
    background-color: var(--unity-theme-background-color-6);
}

#MetaXRPlayCompanion .unity-toolbar-toggle:checked:hover {
    background-color: var(--unity-theme-background-color-7);
}

/* Focus state */
#MetaXRPlayCompanion .unity-toolbar-toggle:focus {
    background-color: var(--unity-theme-background-color-2);
}

/* Icon styling */
#MetaXRPlayCompanion .unity-toolbar-toggle > .unity-image {
    --unity-image-tint-color: var(--unity-theme-text-color-1);
}

#MetaXRPlayCompanion .unity-toolbar-toggle:hover > .unity-image {
    --unity-image-tint-color: var(--unity-theme-text-color-0);
}

#MetaXRPlayCompanion .unity-toolbar-toggle:checked > .unity-image {
    --unity-image-tint-color: var(--unity-theme-text-color-0);
}

/* Disabled state */
#MetaXRPlayCompanion .unity-toolbar-toggle:disabled {
    opacity: 0.5;
}

#MetaXRPlayCompanion .unity-toolbar-toggle:disabled > .unity-image {
    --unity-image-tint-color: var(--unity-theme-text-color-3);
}
